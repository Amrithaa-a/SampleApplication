@model SampleApp.Models.StudentModel

@{
    ViewBag.Title = "Details";
}

<div class="card">
    <div class="card-body bg-light p-4 rounded-lg shadow">
        <h2 class="card-title text-center ">Student Details</h2>

        <div class="container mt-4">
            <table class="table table-bordered table-striped">
                <tbody>
                    <tr>
                        <th>Student ID</th>
                        <td>@Html.DisplayFor(model => model.StudentId)</td>
                    </tr>
                    <tr>
                        <th>First Name</th>
                        <td>@Html.DisplayFor(model => model.FirstName)</td>
                    </tr>
                    <tr>
                        <th>Last Name</th>
                        <td>@Html.DisplayFor(model => model.LastName)</td>
                    </tr>
                    <tr>
                        <th>Full Name</th>
                        <td>@Html.DisplayFor(model => model.FullName)</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>@Html.Raw(Model.Email)</td>
                    </tr>
                    <tr>
                        <th>Department</th>
                        <td>@Html.DisplayFor(model => model.Department)</td>
                    </tr>
                    <tr>
                        <th>Username</th>
                        <td>@Html.Raw(Model.Username)</td>
                    </tr>
                    <tr>
                        <th>Password</th>
                        <td>@Html.DisplayFor(model => model.Password)</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="text-center mt-3">
            <p>
                <a href="@Url.Action("Edit", "Student", new { StudentId = Model.StudentId })" class="btn btn-primary">Edit</a>
                <a href="@Url.Action("List", "Student")" class="btn btn-light">Back to List</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
